pragma solidity ^0.8.17;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

/// @notice GameToken ERC20 with 18 decimals. Owner can mint. TokenStore will be set as owner after deploy.
contract GameToken is ERC20, Ownable {
    uint256 public gtPerUsdt; // e.g. 1e18

    constructor(string memory name_, string memory symbol_, uint256 gtPerUsdt) ERC20(name, symbol_) {
        gtPerUsdt = _gtPerUsdt;
    }

    function setGtPerUsdt(uint256 amount) external onlyOwner {
        gtPerUsdt = amount;
    }

    function mint(address to, uint256 amount) external onlyOwner {
        _mint(to, amount);
    }
}
